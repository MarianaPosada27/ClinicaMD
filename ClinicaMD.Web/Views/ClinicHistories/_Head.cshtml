@model ClinicaMD.Web.Models.ClinicHistory
<div class="column">
                  <div class="form-group">
                      <label for="colFormLabelLg" class="font-weight-bold">Nombre:</label>
                       <label for="colFormLabelLg" class="text-capitalize font-weight-bold col-sm-6 col-form-label col-form-label-lg"> 
                           @Html.DisplayFor(model => model.Patient.FullName)</label>   
                   </div>
                   <div class="form-group">
                       <label for="colFormLabelLg" class="font-weight-bold">
                           @Html.DisplayNameFor(model => model.Patient.Document):</label>
                       <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg"> 
                           @Html.DisplayFor(model => model.Patient.Document)</label> 
                   </div>
                   <div class="form-group">
                       <label for="colFormLabelLg" class="font-weight-bold">
                           @Html.DisplayNameFor(model => model.Patient.PhoneNumber):</label>
                       <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg"> 
                           @Html.DisplayFor(model => model.Patient.PhoneNumber)</label> 
                   </div>
                   <div class="form-group">
                        <label for="colFormLabelLg" class="font-weight-bold">
                           @Html.DisplayNameFor(model => model.Patient.Address):</label>
                       <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg"> 
                           @Html.DisplayFor(model => model.Patient.Address)</label>
                   </div>
              </div>
              <div class="column">

              </div>
               <div class="form-group">

           </div>
           <partial name = "_ClinicHistory" />
           <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Regresar</a>
            </div>
 <div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                 <h3 class="panel-title">Procedimientos</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Patient.Procedures.FirstOrDefault().Description)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Patient.Procedures.FirstOrDefault().ProcedureType.Description)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Patient.Procedures.FirstOrDefault().Doctor.FullName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Patient.Procedures.FirstOrDefault().Price)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Patient.Procedures.FirstOrDefault().Remarks)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                @foreach (var item in Model.Patient.Procedures)
                    {
                      <tr>
                        <td>
                        @Html.DisplayFor(modelItem => item.Description)
                        </td>
                         <td>
                        @Html.DisplayFor(modelItem => item.ProcedureType.Description)
                        </td>
                        <td>
                        @Html.DisplayFor(modelItem => item.Doctor.FullName)
                        </td>
                        <td>
                        @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                        @Html.DisplayFor(modelItem => item.Remarks)
                        </td>
                      </tr>
                       }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
